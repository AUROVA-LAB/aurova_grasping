<?xml version="1.0"?>
<launch>
  <arg name="paused" default="true"/>
  <arg name="gazebo_gui" default="true"/>
  <arg name="urdf_path" default="$(find ur_e_description)/urdf/ur5e_3f_pkg_gazebo.xacro"/>
  <arg name="world_name" default="$(find ur5_simple_pick_and_place)/world/simple_pick_and_place"/>
  <arg name="robot_spawn_position_z_axis" default="0.01"/>

  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find ur5_simple_pick_and_place)/world/simple_pick_and_place_3f_box"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gazebo_gui)"/>
  </include>

  <!-- send robot urdf to param server -->
  <param name="robot_description" textfile="$(arg urdf_path)" />

  <!-- push robot_description to factory and spawn robot in gazebo at the origin, change x,y,z arguments to spawn in a different position -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -x 0 -y 0 -z 1.21 -J elbow_joint 1.5447 -J shoulder_lift_joint -1.5447 -J shoulder_pan_joint 0 -J wrist_1_joint -1.5794 -J wrist_2_joint -1.5794 -J wrist_3_joint 0 -unpause"
    respawn="false" output="screen" />

  <include file="$(find ur5e_3f_pkg)/launch/ros_controllers.launch"/>

</launch>
